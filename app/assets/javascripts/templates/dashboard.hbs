<div class="dashboard">
  <h1>Dashboard</h1>
  <div class="panel">
    <h2>How are you feelin' right now?</h2>
    <div>
      <div class="emotion-grid">
        <div class="clearfix">
          <div class="emotion">
            <label>Happy</label>
            <button type="button" title="happy" {{action 'happy'}} {{bind-attr
              class=":btn isHappy:btn-primary:btn-default"}}>:)</button>
          </div>
          <div class="emotion">
            <label>Sad</label>
            <button type="button" title="sad" {{action 'sad'}} {{bind-attr
              class=":btn isSad:btn-primary:btn-default"}}>:(</button>
          </div>
        </div>
        <div class="clearfix">
          <div class="emotion">
            <label>Stressed</label>
            <button type="button" title="stressed" {{action 'stressed'}} {{bind-attr
              class=":btn isStressed:btn-primary:btn-default"}}>:[</button>
          </div>
          <div class="emotion">
            <label>Chill</label>
            <button type="button" title="chill" {{action 'chill'}} {{bind-attr
              class=":btn isChill:btn-primary:btn-default"}}>:|</button>
          </div>
        </div>
      </div>
      <div class="explanation-grid">
        What's goin' on? (optional) {{input valueBinding='explanation'}}
      </div>
    </div>

    <div>
      <button {{action 'saveMemory'}} {{bind-attr disabled=saveable}}>Save Memory</button>
    </div>
  </div>
  <div class="panel todays-stats">
    <h2> Today's Stats: </h2>
    <div class="stat">
      Memories Today: <span
        class="value">{{myData.memoriesToday}}</span>
    </div>
    <div class="stat">
      Mood Today: <span class="value">{{myData.moodToday}}</span>
    </div>
    <div class="stat">
      Stress Today: <span class="value">{{myData.stressToday}}</span>
    </div>
    <div class="explanations">
      <div class="heading">Things What Happened Today:</div>
      {{#each explanation in myData.explanationsToday}}
        <div class="explanation">
          "{{explanation}}"
        </div>
      {{/each}}
    </div>
  </div>
</div>
